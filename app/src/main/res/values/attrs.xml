<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="expandedText" format="string" />
    <attr name="collapsedText" format="string" />
    <attr name="trimLines" format="integer" />

    <declare-styleable name="MoreTextView">
        <attr name="expandedText" />
        <attr name="collapsedText" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="trimLines" />
    </declare-styleable>

    <declare-styleable name="CollapsedTextView">
        <attr name="expandedText" />
        <attr name="collapsedText" />
        <attr name="trimLines" />
    </declare-styleable>
    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <attr name="titleText" format="string" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="titleTextColor" format="color" />
    <declare-styleable name="CustomTitleText">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
    </declare-styleable>
</resources>
